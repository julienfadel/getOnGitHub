<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:gravity="left|center"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/background"
        android:text="Choisissez votre couleur :"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#ffffffff" />

    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/background"
        android:paddingBottom="20dp"
        android:paddingLeft="20dp"
        android:paddingTop="20dp">

        <RadioButton
            android:id="@+id/radioButton_Bluetooth_blancs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/background"
            android:checked="false"
            android:text="Blancs"
            android:textColor="#ffffffff"
            android:textSize="20dp" />

        <RadioButton
            android:id="@+id/radioButton_Bluetooth_noirs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/background"
            android:text="Noirs"
            android:textColor="#ffffffff"
            android:textSize="20dp" />

        <RadioButton
            android:id="@+id/radioButton_Bluetooth_aleatoire"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/background"
            android:checked="true"
            android:text="Aléatoire"
            android:textColor="#ffffffff"
            android:textSize="20dp" />
    </RadioGroup>

    <CheckBox
        android:id="@+id/checkBox_bughouse"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:checked="false"
        android:visibility="invisible"
        android:text="Bughouse"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#ffffffff" /> <!--Changer la visibilité du CheckBox pour pouvoir accéder au mode bughouse (en développement)-->

    <Button
        android:id="@+id/button_commencerPartie_Bluetooth"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="Commencer la partie" />

</LinearLayout>